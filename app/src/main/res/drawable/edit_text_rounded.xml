<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid android:color="#DDDDDD"/>
                    <!-- alttan gölge -->
                    <corners android:radius="50dp"/>
                    <padding
                        android:left="2dp"
                        android:right="2dp"
                        android:bottom="4dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="5px"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <solid android:color="#FFFFFF"/>
                    <corners
                        android:radius="50dp"/>
                    <padding
                        android:left="30dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>